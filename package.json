{
  "name": "nextjs-boilerplate",
  "author": "yicru",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx src",
    "format": "eslint --fix --ext .js,.ts,.jsx,.tsx src",
    "type": "tsc --pretty --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "autoprefixer": "10.0.4",
    "clsx": "1.1.1",
    "next": "latest",
    "postcss": "8.2.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "tailwindcss": "2.0.1"
  },
  "devDependencies": {
    "@types/node": "13.13.34",
    "@types/react": "16.14.2",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.5",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "typescript": "3.9.7"
  }
}
